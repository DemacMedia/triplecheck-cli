{
    "name": "amacgregor/triplecheck-cli",
    "require": {
        "php":                           ">=5.3.3",
        "symfony/console":               "~2.1|~3.0",
        "symfony/config":                "~2.3|~3.0",
        "symfony/dependency-injection":  "~2.1|~3.0",
        "symfony/event-dispatcher":      "~2.1|~3.0",
        "symfony/yaml":                  "~2.1|~3.0",
        "symfony/class-loader":          "~2.1|~3.0"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.1",
        "phpunit/phpunit": "~4.6",
        "mockery/mockery": "0.9.*",
        "behat/behat": "~3.0"
    },
    "config": {
       "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "Triplecheck": "src/"
        }
    },
    "authors": [
        {
            "name": "Allan MacGregor",
            "email": "amacgregor@allanmacgregor.com"
        },
        {
            "name": "James Cowie",
            "email": "james@jcowie.co.uk"
        }
    ],
    "bin": [
        "bin/tcheck"
    ]
}
